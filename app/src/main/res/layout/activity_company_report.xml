<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CompanyReportActivity">

    <LinearLayout
        android:id="@+id/inventoryViewAction"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Report"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.9" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/inventoryViewAction">
        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:gravity="center"/>
        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_below="@+id/shopName"
            android:background="@color/gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/blackLight"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/shopAddress"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear">
        <RelativeLayout
            android:id="@+id/relativeInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/linearV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/costCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight=".8"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Purchase\nRegister"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/stockCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1.2"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Current Stock\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearV1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/stockDetailCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="All Stock\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/stockLedgerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Stock Details\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/stockQpnCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Goods Issue\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearV2">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sAgeingCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1.2"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Store Stock\nAgeing Report"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/breakageDetailCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight=".8"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Breakage\nDetails"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearV4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearV3">
                <androidx.cardview.widget.CardView
                    android:id="@+id/breakageSaleCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Breakage Sale\nDetails"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lowInventoryCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Low Inventory\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearV5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearV4">
                <androidx.cardview.widget.CardView
                    android:id="@+id/modVatCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="ModVat\nReport"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/saleBookCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Sale Book"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>