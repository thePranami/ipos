<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleRed"
    tools:context=".Activity.PromoLoginActivity">

    <LinearLayout
        android:id="@+id/viewAction"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Promoters Login to iPOS"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.9" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center"
            android:layout_weight="0.2" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAction">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/animImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ipos"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:layout_below="@+id/animImage">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/rl_medium"
                    android:layout_marginTop="10dp"
                    android:text="Enter Company Code*"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/companyCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:drawableStart="@drawable/ic_company"
                        android:background="@drawable/box_fill" />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:text="Enter Password*"
                    android:fontFamily="@font/rl_medium"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorPrimary"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:letterSpacing="0.15"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock"
                        android:background="@drawable/box_fill"
                        android:textSize="18sp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/rl_medium"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="Login"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>