<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminReportActivity">

    <LinearLayout
        android:id="@+id/inventoryViewAction"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Admin"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.9" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/inventoryViewAction">
        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:gravity="center"/>
        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_below="@+id/shopName"
            android:background="@color/gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/blackLight"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/shopAddress"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/costCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Supplier\nMaster"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/stockCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Customer\nMaster"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/stockDetailCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Price\nMaster"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearV1">
            <androidx.cardview.widget.CardView
                android:id="@+id/stockLedgerCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Scrap Buyer\nMaster"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/stockQpnCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Price List\nof Shop"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearV2">
             <androidx.cardview.widget.CardView
                android:id="@+id/companyRepCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Company report"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/gotham_book"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeInventory"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/viewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/gray"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gotham_book"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewText"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:background="@drawable/txt_round"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/brandLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoryLinear"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rl_medium"
                    android:textColor="@color/black"
                    android:text="Select Zone:"/>
                <Spinner
                    android:id="@+id/zoneSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overlapAnchor="false"
                    android:background="@drawable/rectangle_shape"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/brandLinear">
                <TextView
                    android:id="@+id/getSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Report"
                    android:background="@drawable/button_shape"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>